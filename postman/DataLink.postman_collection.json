{
  "info": {
    "name": "CDUP API Collection",
    "description": "Customer Data Update Portal API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080/api"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"Admin@123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "refresh"]
            }
          }
        }
      ]
    },
    {
      "name": "Customer Requests",
      "item": [
        {
          "name": "Get All Requests",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": {
              "raw": "{{baseUrl}}/requests?page=0&size=20",
              "host": ["{{baseUrl}}"],
              "path": ["requests"],
              "query": [
                {"key": "page", "value": "0"},
                {"key": "size", "value": "20"}
              ]
            }
          }
        },
        {
          "name": "Create Request",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cnic\": \"12345-1234567-1\",\n  \"mobileNumber\": \"03001234567\",\n  \"email\": \"customer@email.com\",\n  \"fatherName\": \"Father Name\",\n  \"motherName\": \"Mother Name\",\n  \"sourceOfIncome\": \"SALARY\",\n  \"purposeOfAccount\": \"SAVINGS\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/requests",
              "host": ["{{baseUrl}}"],
              "path": ["requests"]
            }
          }
        },
        {
          "name": "Get Request by ID",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": {
              "raw": "{{baseUrl}}/requests/1",
              "host": ["{{baseUrl}}"],
              "path": ["requests", "1"]
            }
          }
        },
        {
          "name": "Dashboard Stats",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": {
              "raw": "{{baseUrl}}/requests/dashboard-stats",
              "host": ["{{baseUrl}}"],
              "path": ["requests", "dashboard-stats"]
            }
          }
        }
      ]
    },
    {
      "name": "Approvals",
      "item": [
        {
          "name": "Get Pending Approvals",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": {
              "raw": "{{baseUrl}}/approvals/pending",
              "host": ["{{baseUrl}}"],
              "path": ["approvals", "pending"]
            }
          }
        },
        {
          "name": "Approve Request",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"requestId\": 1,\n  \"action\": \"APPROVE\",\n  \"comments\": \"Approved\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/approvals/action",
              "host": ["{{baseUrl}}"],
              "path": ["approvals", "action"]
            }
          }
        }
      ]
    },
    {
      "name": "Reports",
      "item": [
        {
          "name": "Daily Report",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": {
              "raw": "{{baseUrl}}/reports/daily",
              "host": ["{{baseUrl}}"],
              "path": ["reports", "daily"]
            }
          }
        },
        {
          "name": "Weekly Report",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": {
              "raw": "{{baseUrl}}/reports/weekly",
              "host": ["{{baseUrl}}"],
              "path": ["reports", "weekly"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/users",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "users"]
            }
          }
        },
        {
          "name": "Create User",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"newuser\",\n  \"password\": \"Password@123\",\n  \"fullName\": \"New User\",\n  \"email\": \"newuser@email.com\",\n  \"role\": \"AGENT\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/users",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "users"]
            }
          }
        }
      ]
    }
  ]
}
